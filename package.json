{
  "name": "@alex7kom/sayonara-config",
  "version": "0.7.0",
  "engines": {
    "node": ">=10.0.0"
  },
  "description": "Zero config tools",
  "bin": {
    "sayonara-config": "src/run.js"
  },
  "scripts": {
    "lint": "eslint \"src/**/*.{j,t}s?(x)\"",
    "pretty": "pretty-quick",
    "test": "jest"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged && npm run lint"
    }
  },
  "keywords": [],
  "author": "Alexey Komarov <alex7kom@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "@types/jest": "^24.0.23",
    "@types/node": "^12.12.14",
    "@typescript-eslint/eslint-plugin": "^2.9.0",
    "@typescript-eslint/parser": "^2.9.0",
    "confusing-browser-globals": "^1.0.9",
    "eslint": "^6.7.1",
    "eslint-config-prettier": "^6.7.0",
    "eslint-plugin-node": "^10.0.0",
    "eslint-plugin-prettier": "^3.1.1",
    "jest": "^24.9.0",
    "prettier": "^1.19.1",
    "pretty-quick": "^2.0.1",
    "ts-jest": "^24.2.0",
    "ts-node": "^8.5.4",
    "typescript": "^3.7.2"
  },
  "eslintConfig": {
    "extends": "./src/configs/eslint-node.js",
    "overrides": [
      {
        "files": [
          "*.?(test|spec).{j,t}s?(x)"
        ],
        "env": {
          "jest": true,
          "node": true,
          "es6": true
        },
        "parserOptions": {
          "ecmaVersion": 2018
        }
      },
      {
        "files": [
          "*.tpl.js"
        ],
        "rules": {
          "node/no-missing-require": "off"
        }
      }
    ]
  },
  "devDependencies": {
    "husky": "^3.1.0"
  },
  "sayonaraConfig": {
    "sets": [
      "node-app",
      "npm-package"
    ]
  }
}
