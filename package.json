{
  "name": "@alex7kom/sayonara-config",
  "version": "0.12.1",
  "engines": {
    "node": ">=10.0.0"
  },
  "description": "Zero config tools",
  "bin": {
    "sayonara-config": "src/run.js"
  },
  "scripts": {
    "lint": "eslint --max-warnings 0 \"src/**/*.{j,t}s?(x)\"",
    "pretty": "prettier --write \"src/**/*.{j,t}s?(x)\"",
    "test": "run-s test:*",
    "test:lint": "npm run lint",
    "test:jest": "jest"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged && npm run lint"
    }
  },
  "keywords": [],
  "author": "Alexey Komarov <alex7kom@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "@types/jest": "^26.0.0",
    "@types/node": "^14.0.13",
    "@typescript-eslint/eslint-plugin": "^4.2.0",
    "@typescript-eslint/parser": "^4.2.0",
    "confusing-browser-globals": "^1.0.9",
    "eslint": "^7.2.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-jest": "^24.0.2",
    "eslint-plugin-jest-formatting": "^2.0.0",
    "eslint-plugin-jsdoc": "^30.5.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.3",
    "jest": "^26.0.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.5",
    "pretty-quick": "^3.0.2",
    "ts-jest": "^26.1.0",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.3"
  },
  "eslintConfig": {
    "extends": [
      "./src/configs/eslint-node.js",
      "./src/configs/eslint-jest.js"
    ],
    "overrides": [
      {
        "files": [
          "*.tpl.js"
        ],
        "rules": {
          "node/no-missing-require": "off"
        }
      }
    ],
    "rules": {
      "jsdoc/require-jsdoc": "off"
    }
  },
  "devDependencies": {
    "husky": "3.1.0"
  },
  "sayonaraConfig": {
    "sets": [
      "node-app",
      "npm-package"
    ]
  }
}
