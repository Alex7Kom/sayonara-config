{
  "name": "@alex7kom/sayonara-config",
  "version": "0.3.4",
  "description": "Zero config tools",
  "bin": {
    "sayonara-config": "src/run.js"
  },
  "scripts": {
    "lint": "eslint src/**/*.js",
    "pretty": "pretty-quick",
    "pre-commit": "pretty-quick --staged && npm run lint",
    "test": "jest"
  },
  "keywords": [],
  "author": "Alexey Komarov <alex7kom@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "eslint": "^5.4.0",
    "eslint-config-prettier": "^3.0.1",
    "eslint-plugin-prettier": "^3.0.1",
    "jest-cli": "^23.5.0",
    "lodash": "^4.17.10",
    "prettier": "^1.14.2",
    "pretty-quick": "^1.6.0"
  },
  "eslintConfig": {
    "extends": "./src/configs/eslint-node.js",
    "overrides": [
      {
        "files": [
          "*.test.js",
          "*.spec.js"
        ],
        "env": {
          "jest": true,
          "node": true,
          "es6": true
        },
        "parserOptions": {
          "ecmaVersion": 6
        }
      }
    ]
  },
  "devDependencies": {
    "husky": "^1.3.1"
  },
  "sayonaraConfig": {
    "sets": [
      "node-app",
      "npm-package"
    ]
  }
}
